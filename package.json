{
  "name": "simple-chat",
  "version": "0.0.0",
  "description": "NPM packages for simple-chat",
  "private": true,
  "scripts": {
    "prestart": "rimraf ./public/dist",
    "start": "npm run webpack:production && node ./app/server.js",
    "predev": "rimraf ./public/dist",
    "dev": "concurrently 'npm run server:watch' 'npm run webpack'",
    "predev:app": "rimraf ./public/dist",
    "dev:app": "concurrently 'npm run server:watch' 'npm run webpack' 'electromon _scripts/electron/main.js'",
    "server:watch": "nodemon -L --watch ./app ./app/server.js",
    "webpack": "webpack --watch --watch-poll --mode development --config ./_scripts/webpack/webpack.config.js",
    "webpack:production": "webpack --mode production --config ./_scripts/webpack/webpack.config.js",
    "lint": "eslint -c ./package.json ./"
  },
  "author": {
    "name": "Glenn de Haan",
    "email": "glenn@dehaan.cloud",
    "url": "https://glenndehaan.com/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "pragma": "h",
        "version": "16.0"
      }
    }
  },
  "eslintIgnore": [
    "public/dist"
  ],
  "dependencies": {
    "atob": "^2.1.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.17.2",
    "btoa": "^1.2.1",
    "concurrently": "^3.6.0",
    "css-loader": "^0.28.11",
    "ejs": "^2.5.8",
    "electromon": "^1.0.10",
    "electron": "^2.0.8",
    "electron-debug": "^2.0.0",
    "express": "^4.16.3",
    "express-browsersupport": "^1.3.4",
    "express-ws": "^4.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mongoose": "^5.0.14",
    "node-sass": "^4.9.1",
    "preact": "^8.2.9",
    "sass-loader": "^7.0.3",
    "simple-node-logger": "^0.93.37",
    "sockette": "^2.0.0",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "devDependencies": {
    "nodemon": "^1.17.3",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.10.0"
  }
}
