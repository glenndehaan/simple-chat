{
  "application": {
    "name": "Simple Chat",
    "version": "v0.0.0",
    "env": " (local)",
    "basePath": "/",
    "port": 3001,
    "bind": "0.0.0.0",
    "supportedBrowsers": [
      "Chrome >= 52",
      "Firefox >= 47",
      "Safari >= 10",
      "Edge == All",
      "IE == 11"
    ]
  },
  "mongo": {
    "host": "prototype.dev",
    "port": 27017,
    "auth": true,
    "username": "root",
    "password": "root",
    "database": "simple-chat"
  },
  "logger": {
    "location": "/log/server.log",
    "level": "info"
  },
  "chat": {
    "rooms": [
      {
        "name": "AFK/Away",
        "default": true,
        "muted": true
      },
      {
        "name": "Room 1",
        "default": false,
        "muted": false
      }
    ]
  }
}
